{
  "realm": "myrealm",
  "enabled": true,

  "clients": [
    {
      "clientId": "frontend-client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "redirectUris": [
        "http://app.localhost/*"
      ],
      "webOrigins": [
        "http://app.localhost"
      ],
      "authorizationServicesEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "rootUrl": "http://app.localhost",
      "baseUrl": "/"
    },
    {
      "clientId": "backend-client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false
    }
  ],

  "roles": {
    "realm": [
      { "name": "admin" },
      { "name": "manager" },
      { "name": "employee" }
    ]
  },

  "users": [
    {
      "username": "john",
      "enabled": true,
      "email": "john@company.com",
      "credentials": [
        { "type": "password", "value": "JohnPass123", "temporary": false }
      ],
      "realmRoles": ["employee"]
    },
    {
      "username": "alice",
      "enabled": true,
      "email": "alice@company.com",
      "credentials": [
        { "type": "password", "value": "AlicePass123", "temporary": false }
      ],
      "realmRoles": ["manager"]
    }
  ]
}
